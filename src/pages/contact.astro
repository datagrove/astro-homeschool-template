---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact">
  <div class="w-full lg:py-20 py-16 px-4 mx-auto mb-4">
    <!-- fullName phoneNumber emailAddress Message  -->
    <div class="h-full w-full mx-auto md:grid md:grid-cols-2">
      <div id="form" class="lg:w-2/3 w-11/12 mx-auto">
        <div
          class="h-1/2 w-full flex flex-col content-center justify-center md:mb-0 mb-10"
        >
          <h3 class="text-6xl pb-3 font-bold font-heading">Lets talk .</h3>
          <p class="text-xl">
            Have a question or suggestion? Feel free to drop us a message!
          </p>
        </div>
        <hr class="h-2" />
        <div class="h-1/2 mt-10 md:mt-20 mb-20 md:mb-0">
          <h2 class="text-3xl font-bold">Office Information</h2>
          <h2 class="my-8 text-lg">123 Train St, San Francisco, CA 9107</h2>
          <div class="w-full border-2 shadow-xl py-5 px-5 rounded-xl mb-4">
            <h3>Phone</h3>
            <a href="tel:12313" class="text-lg w-40 font-bold pt-2">1234567</a>
          </div>
          <div class="w-full border-2 shadow-xl py-5 px-5 rounded-xl mb-4">
            <h3>Email</h3>
            <a href="email:email@email.com" class="text-lg font-bold"
              >email@email.com</a
            >
          </div>
        </div>
      </div>
      <div id="" class="">
        <div
          class="lg:w-10/12 w-11/12 shadow-lg border-2 py-6 px-10 rounded-xl my-6 mx-auto"
        >
          <h1 class="text-3xl font-bold my-4">Say Hello</h1>
          <form class="w-full flex flex-col">
            <div class="w-full relative my-6">
              <p class="pl-2 font-bold mb-4">Full Name</p>
              <label>
                <input
                  class="text-xl w-11/12 md:px-2 md:py-3 px-8 py-2 rounded-md border-2 text-left dark:text-black"
                  type="text"
                  name="fullName"
                  placeholder="Full Name"
                  required
                />
              </label>
            </div>
            <div class="w-full relative my-6">
              <p class="pl-2 font-bold mb-4">Phone Number</p>
              <label>
                <input
                  class="text-xl w-11/12 md:px-2 md:py-3 px-8 py-2 rounded-md border-2 text-left dark:text-black"
                  type="tel"
                  name="phoneNumber"
                  placeholder="Phone Number"
                  required
                />
              </label>
            </div>
            <div class="w-full relative my-6">
              <p class="pl-2 font-bold mb-4">Email Address</p>
              <label>
                <input
                  class="text-xl w-11/12 md:px-2 md:py-3 px-8 py-2 rounded-md border-2 text-left dark:text-black"
                  type="email"
                  name="email"
                  placeholder="Email Address"
                  required
                />
              </label>
            </div>
            <div class="w-full relative my-6">
              <p class="pl-2 font-bold mb-4">Your Message</p>
              <label>
                <input
                  class="text-xl w-11/12 pb-40 md:px-2 md:py px-8 py-2 rounded-md border-2 text-left dark:text-black"
                  type="text"
                  name="message"
                  placeholder="Message"
                  required
                />
              </label>
            </div>

            <button
              class="lg:w-32 min-w-min-40 ml-2 border-2 mt-4 mb-4 py-3 rounded-xl hover:shadow-lg"
              >Send Message</button
            >
          </form>
        </div>
      </div>
    </div>
  </div>
</Layout>
