---
import Layout from "../layouts/Layout.astro";

import { getEntryBySlug } from "astro:content";

const faqsPost = await getEntryBySlug("blog", "faqs");
console.log(faqsPost.data.title);
const { Content } = await faqsPost.render();
---

<Layout title={faqsPost.data.title}>
  <div class="mx-auto px-4 max-w-6xl lg:py-20 py-16">
    <div class="lg:max-w-2xl max-w-xl sm:mx-auto text-center">
      <div
        class="lg:max-w-2xl max-w-xl mb-10 md:mb-12 md:mx-auto md:text-center"
      >
        <h2
          class="font-bold font-heading my-4 leading-none max-w-lg md:mx-auto md:tracking-tight sm:text-4xl text-3xl text-center"
        >
          Frequently Asked Questions
        </h2>
      </div>
    </div>
  </div>
  <div class="sm:mx-auto px-2 max-w-7xl">
    <div class="prose flex">
      <div class="sm:mx-auto max-w-7xl">
        <div
          class="grid md:grid-cols-2 gap-x-8 gap-y-8 grid-cols-1 lg:gap-x-16 [&>div]:space-y-8 [&>div>h3]:text-2xl [&>div>h3]:mb-4 [&>div>h3]:text-center font-heading [&>div>h3]:py-4"
        >
          <Content />
        </div>
      </div>
    </div>
  </div>
</Layout>
