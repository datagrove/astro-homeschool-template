---
import { getEntryBySlug } from "astro:content";
import Layout from "../layouts/Layout.astro";
const about = await getEntryBySlug("pagesMD", "about");
const { Content } = await about.render();
---

<Layout title={about.data.title}>
  <div
    class="lg:max-w-2xl max-w-xl mb-10 text-center md:mb-12 lg:py-20 py-16 md:mx-auto md:text-center [&>h1]:text-4xl [&>h1]:pb-12 [&>h1]:font-bold [&>h1][&>h1]:font-heading"
  >
    <Content />
  </div>
</Layout>
