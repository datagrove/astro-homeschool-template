export const initApp = () => {
  const hamburgerBtn = document.getElementById("hamburger-button");
  const mobileMenu = document.getElementById("mobile-menu");

  const toggleMenu = () => {
    mobileMenu?.classList.toggle("hidden");
    mobileMenu?.classList.toggle("flex");
    hamburgerBtn?.classList.toggle("toggle-btn");
  };

  hamburgerBtn?.addEventListener("click", toggleMenu);
  mobileMenu?.addEventListener("click", toggleMenu);

  let defaultTheme = true;
  const theme = document.getElementById("theme");
  const body = document.querySelector("body");
  const header = document.querySelector("header");

  theme?.addEventListener("click", () => {
    if (defaultTheme) {
      // Remove classes
      mobileMenu?.classList.remove("bg-black", "text-white");
      body?.classList.remove("bg-black", "text-white");
      header?.classList.remove("bg-black", "text-white");

      // Add classes

      body?.classList.add("bg-white", "text-black");
      header?.classList.add("bg-white", "text-black");
      mobileMenu?.classList.add("bg-white", "text-black");

      defaultTheme = false;
    } else {
      // Remove classes

      mobileMenu?.classList.remove("bg-white", "text-black");
      body?.classList.remove("bg-white");
      header?.classList.remove("bg-white");

      // Add classes

      mobileMenu?.classList.add("bg-black", "text-white");
      body?.classList.add("bg-black", "text-white");
      header?.classList.add("bg-black", "text-white");

      defaultTheme = true;
    }

    console.log(defaultTheme);
  });
};
